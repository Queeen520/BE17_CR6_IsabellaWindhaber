{% extends 'base.html.twig' %} {% block title %}Global Events{% endblock %}
{%block body %}

<div class="container d-flex justify-content-center p-2 w-100 h-25">
  <span>
    <a href="/create" class="btn btn-success btn-lg p-2"
      >Create New Event <i class="fa-solid fa-file-circle-plus"></i>
    </a>
  </span>
</div>

<div class="container p-2 mt-4">
  <div class="row row-cols-3 g-2 mx-2">
    {% for event in events %}
    <div class="card p-2 border border-secondary border-opacity-50 rounded">
      <img src="..." class="card-img-top" alt="img" />
      <div class="card-body">
        <h4 class="fs-3 card-title text-center">{{ event.name }}</h4>
        <p class="fs-5 card-text">
          {{ event.description }}
        </p>
      </div>
      <div class="card-footer bg-light border border-rounded">
        <span class="d-flex justify-content-between">
          <small class="text-dark"> Where:</small>
          <small class="text-dark"> {{ event.city }}</small>
        </span>
      </div>

      <div class="card-footer bg-light border border-rounded">
        <span class="d-flex justify-content-between">
          <small class="text-dark"> When:</small>
          <small class="text-dark"> {{ event.start | date() }}</small>
        </span>
      </div>
      <a class="btn btn-info mt-3">
        <i class="fa-sharp fa-solid fa-ellipsis-vertical"></i> Event Details</a
      >
      <span class="d-flex justify-content-around mt-2 mb-2">
        <a href="/update" class="w-25 my-1 btn btn-warning"
          ><i class="fa-solid fa-square-plus"></i> UPDATE</a
        >
        <a href="/delete" class="w-25 my-1 btn btn-danger"
          ><i class="fa-solid fa-trash-can"></i> DELETE</a
        >
      </span>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
