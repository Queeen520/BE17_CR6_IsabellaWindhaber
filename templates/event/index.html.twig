{% extends 'base.html.twig' %} {% block title %}Global Events{% endblock %}
{%block body %}

<div class="container p-2 mt-4">
  <div class="row row-cols-3 g-2 mx-2">
    {% for event in events %}
    <div class="card p-2 border border-secondary border-opacity-50 rounded">
      <img src="..." class="card-img-top" alt="img" />
      <div class="card-body">
        <h5 class="card-title text-center">{{ event.name }}</h5>
        <p class="card-text">
          This is a longer card with supporting text below as a natural lead-in
          to additional content. This content is a little bit longer.
        </p>
      </div>
      <div class="card-footer border border-rounded">
        <small class="text-dark">{{ event.start | date() }}</small>
      </div>
      <a class="btn btn-info">Event Details</a>
      <span class="d-flex justify-content-evenly mt-2 mb-2">
        <a class="w-25 my-2 btn btn-warning">UPDATE</a>
        <a class="w-25 my-2 btn btn-danger">DELETE</a>
      </span>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
