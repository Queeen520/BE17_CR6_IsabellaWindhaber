{% extends 'base.html.twig' %} {% block title %}Details Page{% endblock %} {%
block body %}
{% for event in events %}
<div class="container">
  <div class="container p-4 border border-secondary border-opacity-50 rounded">
    <div class="card mb-3" style="max-width: 540rem">
      <div class="row g-0">
        <div class="col-md-4">
          <img
            src="{{event.img}}"
            class="img-fluid rounded-start m-auto"
            alt="img" />
        </div>
        <div class="col-md-8 border border-secondary border-opacity-25 rounded">
          <div class="card-body">
            <h5 class="card-title">{{event.name}}</h5>
            <p class="card-text">
              {{ event.description }}
            </p>
            <p class="card-text"><b>Location:</b></p>
            <div class="container d-flex">
            <p class="card-text px-2">{{ event.zip }}</p>
            <p class="card-text">{{event.city}}</p>
            <br>
            <p class="card-text px-2">{{event.street}}</p> 
            </div>
            <hr>
              <small class="text-dark">See all Infos at the official Website <i class="bi bi-arrow-right-circle-fill"></i></small>
              <a class="text-dark">{{event.url}}</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endfor %}
{% endblock %}
